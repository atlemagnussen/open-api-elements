{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["DOM", "ES2023"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "lib",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "useDefineForClassFields": false,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/*"]
        },
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}